// JavaScript source code
function showHideTab() {
    var SolutionDeploymentMode = Xrm.Page.getAttribute("onl_solutiondeploymentmodeonl").getValue();
 if (SolutionDeploymentMode == 0){}
else{
    if (SolutionDeploymentMode == 122050000) {

        Xrm.Page.ui.tabs.get("WL_WAN Details").setVisible(true);
        Xrm.Page.ui.tabs.get("WL_WAN Details").sections.get("WL_WAN Details_section_3").setVisible(true);
        Xrm.Page.ui.tabs.get("WL- LAN Details").setVisible(true);
        Xrm.Page.ui.tabs.get("WR- WAN Details").setVisible(false);
        Xrm.Page.ui.tabs.get("WR- WAN Details").sections.get("WR- WAN Details_section_3").setVisible(false);
        Xrm.Page.ui.tabs.get("WR- LAN Details").setVisible(false);
        Xrm.Page.ui.tabs.get("RL Details").setVisible(false);
        Xrm.Page.ui.tabs.get("RR Details").setVisible(false);

    }
    else if (SolutionDeploymentMode == 122050001) {
        Xrm.Page.ui.tabs.get("WR- WAN Details").setVisible(true);
        Xrm.Page.ui.tabs.get("WR- WAN Details").sections.get("WR- WAN Details_section_3").setVisible(true);
        Xrm.Page.ui.tabs.get("WR- LAN Details").setVisible(true);
        Xrm.Page.ui.tabs.get("WL_WAN Details").setVisible(false);
        Xrm.Page.ui.tabs.get("WL_WAN Details").sections.get("WL_WAN Details_section_3").setVisible(false);
        Xrm.Page.ui.tabs.get("WL- LAN Details").setVisible(false);
        Xrm.Page.ui.tabs.get("RL Details").setVisible(false);
        Xrm.Page.ui.tabs.get("RR Details").setVisible(false);


    }
    else if (SolutionDeploymentMode == 122050002) {
        Xrm.Page.ui.tabs.get("RR Details").setVisible(true);
        Xrm.Page.ui.tabs.get("WR- WAN Details").setVisible(false);
        Xrm.Page.ui.tabs.get("WR- WAN Details").sections.get("WR- WAN Details_section_3").setVisible(false);
        Xrm.Page.ui.tabs.get("WR- LAN Details").setVisible(false);
        Xrm.Page.ui.tabs.get("WL_WAN Details").setVisible(false);
        Xrm.Page.ui.tabs.get("WL_WAN Details").sections.get("WL_WAN Details_section_3").setVisible(false);
        Xrm.Page.ui.tabs.get("WL- LAN Details").setVisible(false);
        Xrm.Page.ui.tabs.get("RL Details").setVisible(false);

    }
    else if (SolutionDeploymentMode === 122050003) {
        Xrm.Page.ui.tabs.get("RL Details").setVisible(true);
        Xrm.Page.ui.tabs.get("WR- WAN Details").setVisible(false);
        Xrm.Page.ui.tabs.get("WR- WAN Details").sections.get("WR- WAN Details_section_3").setVisible(false);
        Xrm.Page.ui.tabs.get("WR- LAN Details").setVisible(false);
        Xrm.Page.ui.tabs.get("WL_WAN Details").setVisible(false);
        Xrm.Page.ui.tabs.get("WL_WAN Details").sections.get("WL_WAN Details_section_3").setVisible(false);
        Xrm.Page.ui.tabs.get("WL- LAN Details").setVisible(false);
        Xrm.Page.ui.tabs.get("RR Details").setVisible(false);

    }
}
}

