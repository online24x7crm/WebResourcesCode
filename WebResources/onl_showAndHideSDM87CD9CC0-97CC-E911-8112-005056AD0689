//status on hold
function HideField()
{
 var status=Xrm.Page.getAttribute("onl_spectra_orderstatus").getValue();
 if (status =="122050000")
   {
    Xrm.Page.getControl("spectra_reason").setVisible(false);
    Xrm.Page.getControl("spectra_remarks").setVisible(false);
     Xrm.Page.getControl("spectra_remarks").setRequiredLevel("none");
     Xrm.Page.getControl("spectra_reason").setRequiredLevel("none");         

    Xrm.Page.getControl("onl_spectra_cpeserialnumber").setRequiredLevel("required");
    Xrm.Page.getControl("onl_spectra_cpetrackingnumber").setRequiredLevel("required");
    Xrm.Page.getControl("onl_spectra_dispatcheddate").setRequiredLevel("required");         
   }
   else if (status =="122050003")
   {
    Xrm.Page.getControl("spectra_reason").setVisible(true);
    Xrm.Page.getControl("spectra_remarks").setVisible(true);
    Xrm.Page.getControl("spectra_remarks").setRequiredLevel("required");
     Xrm.Page.getControl("spectra_reason").setRequiredLevel("required");         

    Xrm.Page.getControl("onl_spectra_cpeserialnumber").setRequiredLevel("required");
    Xrm.Page.getControl("onl_spectra_cpetrackingnumber").setRequiredLevel("required");
    Xrm.Page.getControl("onl_spectra_dispatcheddate").setRequiredLevel("required");   
   }
    else{
    Xrm.Page.getControl("spectra_reason").setVisible(false);
    Xrm.Page.getControl("spectra_remarks").setVisible(false);
    Xrm.Page.getControl("spectra_remarks").setRequiredLevel("none");
     Xrm.Page.getControl("spectra_reason").setRequiredLevel("none");         
	}
}